generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id        String   @id @default(uuid())
  name      String
  startDate DateTime
  endDate   DateTime
  tickets   Ticket[]
  createdAt DateTime @default(now())
}

model Ticket {
  id        String   @id @default(uuid())
  code      String   @unique
  name      String
  surname   String
  used      Boolean  @default(false)
  usedAt    DateTime?
  eventId   String?
  event     Event?   @relation(fields: [eventId], references: [id])
  createdAt DateTime @default(now())
}
